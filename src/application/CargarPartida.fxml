<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="root" spacing="10" style="-fx-padding: 10;" stylesheets="@application.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.CargarPartidaController">

    <TableView fx:id="tableViewPartidas" prefHeight="300" prefWidth="600">
        <columns>
            <TableColumn fx:id="colTamaño" prefWidth="150" text="Tamany" />
            <TableColumn fx:id="colTiempo" prefWidth="150" text="Temps" />
            <TableColumn fx:id="colCasillasDescubiertas" prefWidth="150" text="Casillas Descobertes" />
            <TableColumn fx:id="colBanderasRestantes" prefWidth="150" text="Banderes Restants" />
        </columns>
    </TableView>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
      <children>
      
          <Button onAction="#cargarPartida" style="-fx-background-color: #365057; -fx-background-radius: 10;" styleClass="botonEnrere" text="Cargar partida seleccionada" textFill="WHITE">
            <font>
               <Font name="System Bold" size="18.0" />
            </font></Button>
          <Button onAction="#volver" style="-fx-background-color: #365057; -fx-background-radius: 10;" styleClass="botonEnrere" text="Volver a elegir Tamaño" textFill="WHITE">
            <font>
               <Font name="System Bold" size="18.0" />
            </font></Button>
      </children>
   </HBox>
</VBox>
