<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Text?>

<VBox fx:id="root" alignment="CENTER" prefHeight="765.0" prefWidth="934.0" spacing="20.0" style="-fx-background-color: #f0fff0;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.JocVidaController">

   <children>

      <HBox alignment="CENTER" spacing="60.0">
         <children>
            <Text fx:id="textoGeneraciones" style="-fx-font-size: 16px;" text="Generación:" />
            <Text fx:id="textoTotal" style="-fx-font-size: 16px;" text="Células Totales:" />
            <Text fx:id="textoVivas" style="-fx-font-size: 16px;" text="Células Vivas:" />
            <Text fx:id="textoMuertas" style="-fx-font-size: 16px;" text="Células Muertas:" />
         </children>
      </HBox>

      <HBox alignment="CENTER" spacing="30.0">
         <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
         </padding>
         <children>
            <HBox alignment="CENTER_LEFT" spacing="8.0">
               <children>
                  <Circle fill="green" radius="6.0" stroke="BLACK" />
                  <Text text="Células Vivas" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="8.0">
               <children>
                  <Circle fill="lightgreen" radius="6.0" stroke="BLACK" />
                  <Text text="Células Recién Nacidas" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="8.0">
               <children>
                  <Circle fill="white" radius="6.0" stroke="BLACK" />
                  <Text text="Células Muertas" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="8.0">
               <children>
                  <Circle fill="gray" radius="6.0" stroke="BLACK" />
                  <Text text="Células Recién Muertas" />
               </children>
            </HBox>
         </children>
      </HBox>

      <GridPane fx:id="gridPane" alignment="CENTER" gridLinesVisible="true" prefHeight="400.0" prefWidth="400.0" />

      <HBox alignment="CENTER" spacing="200.0">
         <children>

            <HBox alignment="CENTER" spacing="40.0">
               <children>
                  <Button fx:id="botonPausa" onAction="#pausar" style="-fx-background-color: #c7f5cb;" text="Pausa" />
                  <Button fx:id="botonReanudar" onAction="#reanudar" style="-fx-background-color: #b5e6b7;" text="Reanudar" />
                  <Button fx:id="botonStop" onAction="#acabar" style="-fx-background-color: #d3f2d3;" text="Volver a elegir tamaño" />
               </children>
            </HBox>

            <HBox alignment="CENTER" spacing="40.0">
               <children>
                  <Button fx:id="botonX2" onAction="#x2" style="-fx-background-color: #c3f2ce;" text="&gt;&gt;2" />
                  <Button fx:id="botonE2" onAction="#E2" style="-fx-background-color: #c3f2ce;" text="&lt;&lt;2" />
               </children>
            </HBox>

         </children>
      </HBox>

   </children>
</VBox>
