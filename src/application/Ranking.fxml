<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400" prefWidth="600" style="-fx-background-color: #0d262e;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.RankingController">

	<children>
		<VBox alignment="TOP_CENTER" spacing="15" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
			<Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Mi Ranking de Partidas" textFill="WHITE" />

			<TableView fx:id="tablaRanking" prefHeight="300" prefWidth="560">
				<columns>
					<TableColumn fx:id="columnaTiempo" prefWidth="180" text="Tiempo" />
					<TableColumn fx:id="columnaFecha" prefWidth="192.0" text="Fecha" />
					<TableColumn fx:id="columnaTamanyo" prefWidth="187.0" text="Tamaño" />
				</columns>
			</TableView>

			<HBox alignment="CENTER" prefHeight="100.0" prefWidth="560.0">
				<children>
					<Button onAction="#volverATamaño" style="-fx-background-color: #365057; -fx-background-radius: 10;" text="Volver a Tamaño" textFill="#141414">
						<font>
							<Font name="System Bold" size="18.0" />
						</font>
					</Button>
				</children>
			</HBox>
		</VBox>
	</children>
</AnchorPane>
